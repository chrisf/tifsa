<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="org.jsack.tifsa.Controllers.FindCustomer"
            prefHeight="400.0" prefWidth="850.0">

    <VBox spacing="10.0" alignment="CENTER">
        <HBox spacing="20.0">
            <Label text="Contact Info"/>
            <TextField text="XXX-XXX-XXXX" fx:id="contactInfoField" minWidth="150.0" />
        </HBox>
        <HBox spacing="20.0" alignment="TOP_LEFT">
            <Label text="First Name"/>
            <TextField fx:id="customerFirstField" minWidth="150.0"/>
            <Label text="Last Name"/>
            <TextField fx:id="customerLastField" minWidth="150.0"/>
            <Button text="Search" fx:id="searchButton" onAction="#search"/>
        </HBox>
        <TableView maxHeight="300.0" maxWidth="850.0" minWidth="850.0" fx:id="resultTable">
            <columns>
                <TableColumn fx:id="businessNameColumn" text="Business Name" minWidth="200"/>
                <TableColumn fx:id="firstNameColumn" text="First" minWidth="150"/>
                <TableColumn fx:id="lastNameColumn" text="Last" minWidth="150"/>
                <TableColumn fx:id="address1Column" text="Address" minWidth="350"/>
            </columns>
        </TableView>
        <padding>
            <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
        </padding>
    </VBox>

</AnchorPane>
